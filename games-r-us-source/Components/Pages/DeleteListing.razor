@page "/deletelisting"
@using Microsoft.EntityFrameworkCore
@using games_r_us_source.Data
@inject ApplicationDbContext dbContext
@rendermode InteractiveServer

@foreach (var listing in listings)
{
    <section class="border-gray-200 p-4 mb-4 rounded-md border">
        <p class="text-lg font-bold">@listing.Name</p>
        <p class="text-gray-600">@listing.Description</p>
        <button type="button" @onclick="() => RemoveListing(listing.ID)" class="mt-2 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Delete</button>
    </section>
}

@code {
    private List<Listing> listings; 

    protected override void OnInitialized()
    {
        listings = dbContext.Listings.ToList();
    }

    private void RemoveListing(int listingId)
    {
        var listingToDelete = listings.FirstOrDefault(l => l.ID == listingId);

        if (listingToDelete != null)
        {
            // Fetch all bids associated with the listing
            var associatedBids = dbContext.Bids.Where(b => b.ListingID == listingId).ToList();

            dbContext.Bids.RemoveRange(associatedBids);
            dbContext.Listings.Remove(listingToDelete);
            dbContext.SaveChanges();

            listings = dbContext.Listings.ToList();
        }
    }
}


